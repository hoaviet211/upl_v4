@model UPL.Domain.Entities.Course
@{
    ViewData["Title"] = "Delete Course";
}
<h2>Delete Course</h2>
<div class="alert alert-warning">Are you sure you want to delete this item?</div>
<dl class="row">
    <dt class="col-sm-2">Code</dt>
    <dd class="col-sm-10">@Model.CourseCode</dd>
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.CourseName</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

