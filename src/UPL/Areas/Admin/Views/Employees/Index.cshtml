@model EmployeeListViewModel
@{
    ViewData["Title"] = "Quản lý thành viên";
    var statusMessage = TempData["StatusMessage"] as string;
}

<section class="page-heading">
    <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
        <div>
            <h1 class="page-title">Quản lý ban điều hành</h1>
            <p class="text-muted mb-0">Theo dõi, phân quyền và cập nhật thông tin thành viên.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">+ Thêm thành viên</a>
    </div>
</section>

@if (!string.IsNullOrWhiteSpace(statusMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @statusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
    </div>
}

<div class="card admin-card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end admin-filter-form">
            <div class="col-12 col-lg-4">
                <label asp-for="Filter.Role" class="form-label">Role</label>
                <select asp-for="Filter.Role" class="form-select"
                    asp-items="@(new SelectList(Model.RoleOptions, nameof(EmployeeRoleOption.Name), nameof(EmployeeRoleOption.DisplayName)))">
                    <option value="">Tất cả role</option>
                </select>
            </div>
            <div class="col-12 col-lg-4">
                <label asp-for="Filter.Status" class="form-label">Trạng thái</label>
                <select asp-for="Filter.Status" class="form-select">
                    <option value="">Tất cả</option>
                    <option value="active">Hoạt động</option>
                    <option value="inactive">Ngưng hoạt động</option>
                </select>
            </div>
            <div class="col-12 col-lg-4">
                <label asp-for="Filter.SearchTerm" class="form-label">Tìm kiếm</label>
                <div class="input-group">
                    <input asp-for="Filter.SearchTerm" class="form-control" placeholder="Tên hoặc email" />
                    <button class="btn btn-outline-secondary" type="submit">Tìm</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="d-none d-lg-block">
    <div class="card admin-card">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">Chưa có thành viên nào phù hợp điều kiện
                                lọc.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="fw-semibold">@item.FullName</td>
                                <td>@item.Email</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-1">
                                        @foreach (var role in item.Roles)
                                        {
                                            <span class="badge rounded-pill bg-primary-subtle text-primary">@role</span>
                                        }
                                    </div>
                                </td>
                                <td>@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success-subtle text-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary">Ngưng</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-inline-flex gap-2">
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit"
                                            asp-route-id="@item.Id">Sửa</a>
                                        <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                class="btn btn-sm @(item.IsActive ? "btn-outline-warning" : "btn-outline-success")">
                                                @(item.IsActive ? "Vô hiệu" : "Kích hoạt")
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="d-lg-none">
    @if (!Model.Items.Any())
    {
        <div class="card admin-card">
            <div class="card-body text-center text-muted py-5">
                Chưa có thành viên nào phù hợp điều kiện lọc.
            </div>
        </div>
    }
    else
    {
        foreach (var item in Model.Items)
        {
            <div class="card admin-card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h5 class="mb-1">@item.FullName</h5>
                            <div class="text-muted small">@item.Email</div>
                        </div>
                        <span
                            class="badge @(item.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-secondary")">
                            @(item.IsActive ? "Hoạt động" : "Ngưng")
                        </span>
                    </div>
                    <div class="mb-2">
                        <div class="text-muted small mb-1">Vai trò</div>
                        <div class="d-flex flex-wrap gap-1">
                            @foreach (var role in item.Roles)
                            {
                                <span class="badge rounded-pill bg-primary-subtle text-primary">@role</span>
                            }
                        </div>
                    </div>
                    <div class="text-muted small mb-3">
                        Tạo ngày: @item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                    </div>
                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-primary w-50" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                        <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post" class="w-50">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                class="btn @(item.IsActive ? "btn-outline-warning" : "btn-outline-success") w-100">
                                @(item.IsActive ? "Vô hiệu" : "Kích hoạt")
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>