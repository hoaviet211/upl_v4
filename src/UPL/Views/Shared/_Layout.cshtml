<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - UPL</title>
    <link rel="stylesheet" href="~/dist/assets/main.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-graduation-cap brand-icon"></i>UPL
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-area="Public" asp-controller="Home" asp-action="Index">Public</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Student" asp-controller="Home" asp-action="Index">Học viên</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Staff" asp-controller="Home" asp-action="Index">Nhân viên</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Quản trị</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Videos">report social</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted py-3">
        <div class="container">
            &copy; @DateTime.Now.Year - UPL
        </div>
    </footer>

    <script type="module" src="~/dist/assets/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
