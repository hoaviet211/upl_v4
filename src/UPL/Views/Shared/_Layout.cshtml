<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - UPL</title>
    <link rel="stylesheet" href="~/dist/assets/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="mainNavbar" class="navbar navbar-light sticky-top navbar-custom">
            <div class="container d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <button id="sidebarToggle" class="navbar-toggler" type="button" aria-controls="sideNav" aria-expanded="true" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/upl-logo.svg" class="brand-logo" alt="UPL logo" />
                        <span class="ms-2 fw-semibold">UPL</span>
                    </a>
                </div>
                <ul class="navbar-nav ms-auto align-items-center gap-3 flex-row">
                    @if (!User.Identity?.IsAuthenticated ?? true)
                    {
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
                        <li class="nav-item"><a class="btn btn-primary btn-signup" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle account-toggle btn btn-link p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity?.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">Trang quản trị</a></li>
                                }
                                @if (User.IsInRole("Staff"))
                                {
                                    <li><a class="dropdown-item" asp-area="Staff" asp-controller="Home" asp-action="Index">Trang nhân viên</a></li>
                                }
                                @if (User.IsInRole("Student"))
                                {
                                    <li><a class="dropdown-item" asp-area="Student" asp-controller="Home" asp-action="Index">Trang học viên</a></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Đăng xuất</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-xl my-3 layout-shell" id="layoutShell">
        <div id="sideNav" class="offcanvas offcanvas-start offcanvas-lg" tabindex="-1" aria-labelledby="sideNavLabel" data-bs-scroll="true">
            <div class="offcanvas-header d-lg-none">
                <h5 class="offcanvas-title" id="sideNavLabel">Menu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Đóng"></button>
            </div>
            <div class="offcanvas-body">
                @await Html.PartialAsync("_GuideNav")
            </div>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted py-3">
        <div class="container">
            &copy; @DateTime.Now.Year - UPL
        </div>
    </footer>

    <script type="module" src="~/dist/assets/main.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
